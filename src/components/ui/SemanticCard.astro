---
interface Props {
  type: 'challenge' | 'solution' | 'significance' | 'status';
  title: string;
  items?: string[];
  className?: string;
}

const {
  type,
  title,
  items = [],
  className = ''
} = Astro.props;

const typeConfig = {
  challenge: {
    bg: 'bg-red-900/20',
    border: 'border-red-500/40',
    titleColor: 'text-red-400',
    icon: '⚠️',
    iconBg: 'bg-red-500/20'
  },
  solution: {
    bg: 'bg-green-900/20',
    border: 'border-green-500/40',
    titleColor: 'text-green-400',
    icon: '✓',
    iconBg: 'bg-green-500/20'
  },
  significance: {
    bg: 'bg-[#674EF3]/10',
    border: 'border-[#674EF3]/40',
    titleColor: 'text-[#674EF3]',
    icon: '★',
    iconBg: 'bg-[#674EF3]/20'
  },
  status: {
    bg: 'bg-yellow-900/20',
    border: 'border-yellow-500/40',
    titleColor: 'text-yellow-400',
    icon: '◆',
    iconBg: 'bg-yellow-500/20'
  }
};

const config = typeConfig[type];
---

<div
  class={`relative rounded-lg border-2 ${config.border} ${config.bg} p-6 backdrop-blur-sm ${className}`}
>
  <div class="flex items-start gap-3 mb-4">
    <div class={`flex-shrink-0 w-8 h-8 rounded-full ${config.iconBg} flex items-center justify-center text-lg`}>
      {config.icon}
    </div>
    <h3 class={`text-xl font-semibold ${config.titleColor} flex-1`}>
      {title}
    </h3>
  </div>

  <div class="text-gray-300 space-y-3">
    {items.length > 0 ? (
      <ul class="space-y-2">
        {items.map((item) => (
          <li class="flex items-start gap-2">
            <span class={`text-sm mt-1 ${config.titleColor}`}>•</span>
            <span class="flex-1">{item}</span>
          </li>
        ))}
      </ul>
    ) : (
      <slot />
    )}
  </div>
</div>
