---
import '@fontsource-variable/inter';
import '@fontsource/space-mono';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable', 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', 'Segoe UI', sans-serif;
    --aw-font-heading: 'Space Mono', 'IBM Plex Mono', 'SFMono-Regular', ui-monospace, 'Liberation Mono', monospace;

    --aw-color-primary: rgb(103 78 243);
    --aw-color-secondary: rgb(17 140 78);
    --aw-color-accent: rgb(116 94 250);

    --aw-color-text-heading: rgb(34 42 66);
    --aw-color-text-default: rgb(51 51 51);
    --aw-color-text-muted: rgb(51 51 51 / 70%);
    --aw-color-text-high: rgb(51 51 51);
    --aw-color-text-page: rgb(51 51 51);
    --aw-color-bg-page: rgb(245 246 248);
    --aw-color-surface: rgb(255 255 255);
    --aw-color-surface-alt: rgb(233 236 245);
    --aw-color-border-soft: rgb(204 208 219);
    --aw-color-shadow-soft: rgba(8, 14, 33, 0.12);

    --aw-color-bg-page-dark: rgb(8 14 33);
    --aw-color-header: rgb(8 14 33);

    ::selection {
      background-color: rgba(103, 78, 243, 0.35);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable', 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', 'Segoe UI', sans-serif;
    --aw-font-heading: 'Space Mono', 'IBM Plex Mono', 'SFMono-Regular', ui-monospace, 'Liberation Mono', monospace;

    --aw-color-primary: rgb(103 78 243);
    --aw-color-secondary: rgb(17 140 78);
    --aw-color-accent: rgb(116 94 250);

    --aw-color-text-heading: rgb(245 246 248);
    --aw-color-text-default: rgb(226 230 243);
    --aw-color-text-muted: rgb(226 230 243 / 70%);
    --aw-color-text-high: rgb(245 246 248);
    --aw-color-text-page: rgb(229 232 240);
    --aw-color-bg-page: rgb(8 14 33);
    --aw-color-surface: rgb(17 24 45);
    --aw-color-surface-alt: rgb(23 31 56);
    --aw-color-border-soft: rgba(255, 255, 255, 0.12);
    --aw-color-shadow-soft: rgba(5, 9, 20, 0.35);
    --aw-color-bg-page-dark: rgb(8 14 33);
    --aw-color-header: rgb(8 14 33);

    ::selection {
      background-color: rgba(103, 78, 243, 0.55);
      color: white;
    }
  }
</style>
