---
// ====================================================================
// PLASMA-WATER INTERFACE STREAM PAGE
// Water treatment, remediation, and agricultural applications
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Plasma-Water Interface ‚Äî Lab Stream',
};

const projects = [
  {
    title: 'Saltwater Irrigation',
    slug: '/lab/water/saltwater-irrigation',
    status: 'Early Idea',
    statusColor: 'yellow',
    summary: 'Exploring salinity-tolerant cultivation and soil recovery using plasma-activated water.',
    tags: ['Agriculture', 'Soil Remediation', 'Salinity'],
    updated: 'October 2025'
  },
  {
    title: 'Pollutant Degradation',
    slug: '/lab/water/pollutant-degradation',
    status: 'Concept',
    statusColor: 'gray',
    summary: 'Testing PAW effectiveness for breaking down persistent organic pollutants in water systems.',
    tags: ['Water Treatment', 'Oxidation', 'Remediation'],
    updated: 'Coming Soon'
  },
  {
    title: 'Pathogen Removal',
    slug: '/lab/water/pathogen-removal',
    status: 'Concept',
    statusColor: 'gray',
    summary: 'Investigating plasma treatment for waterborne pathogen inactivation without chemical additives.',
    tags: ['Water Safety', 'Disinfection', 'Public Health'],
    updated: 'Coming Soon'
  },
  {
    title: 'Desalination Systems',
    slug: '/lab/water/desalination',
    status: 'Concept',
    statusColor: 'gray',
    summary: 'Exploring plasma-assisted desalination as a lower-energy alternative to conventional methods.',
    tags: ['Desalination', 'Energy Efficiency', 'Water Access'],
    updated: 'Coming Soon'
  }
];

const focusAreas = [
  {
    title: 'Advanced Oxidation Mechanisms',
    description: 'Understanding how reactive oxygen and nitrogen species generated by plasma interact with water chemistry.',
    icon: '‚öóÔ∏è'
  },
  {
    title: 'Desalination & Water Reuse',
    description: 'Developing energy-efficient plasma-based methods for removing salts and contaminants from water.',
    icon: 'üíß'
  },
  {
    title: 'Kinetics & Reaction Pathways',
    description: 'Mapping the chemical pathways and reaction rates of plasma-water interactions.',
    icon: '‚è±Ô∏è'
  },
  {
    title: 'Pollutant & Pathogen Degradation',
    description: 'Testing plasma effectiveness against specific contaminants and microorganisms.',
    icon: 'üß™'
  }
];
---

<Layout metadata={metadata}>
  <!-- Breadcrumb -->
  <div class="bg-primary-900 border-b border-gray-700/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4">
      <nav class="text-sm text-gray-400 font-mono">
        <a href="/pathways" class="hover:text-living-earth transition">Pathways</a>
        <span class="mx-2">/</span>
        <a href="/lab" class="hover:text-yellow-400 transition">Lab</a>
        <span class="mx-2">/</span>
        <span class="text-white">Plasma-Water Interface</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <Hero
    title="Plasma-Water Interface"
    tagline="Lab Stream II"
  >
    <Fragment slot="subtitle">
      <span class="text-gray-300">
        Water is the first interface between plasma energy and matter. We study how reactive species alter chemical composition, oxidation‚Äìreduction balance, and contaminant breakdown‚Äîlinking bench results to field applications.
      </span>
    </Fragment>
  </Hero>

  <!-- Main Content -->
  <section class="bg-primary-900 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 space-y-16">

      <!-- Focus Areas -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-8 font-mono">Focus Areas</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {focusAreas.map((area) => (
            <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 backdrop-blur-sm hover:border-green-400/30 transition-all duration-300">
              <div class="flex items-start gap-4">
                <span class="text-4xl">{area.icon}</span>
                <div>
                  <h3 class="text-xl font-bold text-white mb-2 font-mono">{area.title}</h3>
                  <p class="text-gray-300 leading-relaxed">{area.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Active Projects -->
      <div>
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold text-white font-mono">Projects</h2>
          <span class="text-sm text-gray-400 font-mono">{projects.length} total</span>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <a
              href={project.slug}
              class={`group bg-gray-900/30 border ${
                project.statusColor === 'yellow' ? 'border-yellow-400/30 hover:border-yellow-400' :
                'border-gray-700/50 hover:border-gray-600'
              } rounded-xl p-6 backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] block`}
            >
              <!-- Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h3 class={`text-xl font-bold mb-2 font-mono ${
                    project.statusColor === 'yellow' ? 'text-yellow-400' : 'text-white'
                  } group-hover:text-living-earth transition`}>
                    {project.title}
                  </h3>
                  <span class={`inline-block px-3 py-1 text-xs font-mono rounded-full ${
                    project.statusColor === 'yellow' ? 'bg-yellow-500/20 text-yellow-400' :
                    'bg-gray-700/50 text-gray-400'
                  }`}>
                    {project.status}
                  </span>
                </div>
                <svg class="w-6 h-6 text-gray-500 group-hover:text-living-earth group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>

              <!-- Summary -->
              <p class="text-gray-300 mb-4 leading-relaxed">{project.summary}</p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-3">
                {project.tags.map((tag) => (
                  <span class="px-2 py-1 bg-gray-800/50 text-gray-400 text-xs rounded font-mono">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Footer -->
              <div class="text-xs text-gray-500 font-mono">
                Updated: {project.updated}
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Contribute Section -->
      <div class="bg-gradient-to-br from-green-400/10 via-transparent to-living-earth/5 border border-green-400/30 rounded-2xl p-8 md:p-12 backdrop-blur-sm">
        <h2 class="text-3xl font-bold text-white mb-6 font-mono">Contribute to This Stream</h2>
        <div class="space-y-6">
          <p class="text-lg text-gray-300 leading-relaxed">
            The Plasma-Water Interface stream needs chemists, water engineers, environmental scientists, and field practitioners who want to advance clean water technologies.
          </p>
          <p class="text-gray-400">
            Whether you run water quality tests, design treatment systems, monitor field sites, or analyze reaction pathways‚Äîyour work becomes part of the commons.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <a
              href="/get-started"
              class="px-6 py-3 bg-green-400 hover:bg-green-300 text-gray-900 rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] text-center"
            >
              Get Started
            </a>
            <a
              href="https://discord.com/invite/DA8BPA3VsN"
              target="_blank"
              class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] text-center"
            >
              Join Discord ‚Üí
            </a>
          </div>
        </div>
      </div>

      <!-- Related Streams -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-6 font-mono">Related Streams</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <a href="/lab/physical" class="group bg-gray-900/30 border border-gray-700/50 hover:border-yellow-400/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-yellow-400 transition">Physical Plasma Systems ‚Üí</h3>
            <p class="text-sm text-gray-400">Hardware design and plasma generation</p>
          </a>
          <a href="/lab/ecosystem" class="group bg-gray-900/30 border border-gray-700/50 hover:border-blue-400/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-blue-400 transition">Ecosystem Dynamics ‚Üí</h3>
            <p class="text-sm text-gray-400">Ecological responses and resilience</p>
          </a>
          <a href="/lab" class="group bg-gray-900/30 border border-gray-700/50 hover:border-living-earth/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-living-earth transition">Back to Lab ‚Üí</h3>
            <p class="text-sm text-gray-400">View all lab streams</p>
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>
