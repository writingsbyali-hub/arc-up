---
// ====================================================================
// SALTWATER IRRIGATION PROJECT PAGE
// Exploring salinity-tolerant cultivation using plasma-activated water
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Saltwater Irrigation — ArcUp Lab',
};

const timeline = [
  {
    date: 'End of 2025',
    phase: 'Phase 1: Foundation',
    description: 'Finalize research questions, identify field partners, complete literature review on salinity tolerance mechanisms and plasma agriculture applications.',
    status: 'current'
  },
  {
    date: 'Mid 2026',
    phase: 'Phase 2: Field Trials',
    description: 'Set up first field trials with selected crop species, deploy monitoring systems for soil salinity and moisture, begin systematic data collection.',
    status: 'upcoming'
  },
  {
    date: 'End of 2026',
    phase: 'Phase 3: Analysis & Documentation',
    description: 'Analyze initial results, document protocols for replication, publish interim findings under open licenses, iterate based on learnings.',
    status: 'upcoming'
  }
];

const researchQuestions = [
  'Can plasma activation of saline water reduce its harmful effects on plant growth?',
  'Which crop species and cultivars show tolerance to PAW-treated saltwater irrigation?',
  'Does PAW application influence soil salinity levels over time through remediation mechanisms?',
  'What are the optimal plasma treatment parameters for different salinity levels?',
  'How do PAW treatments compare to conventional approaches (leaching, gypsum amendment, phytoremediation)?'
];

const contributions = [
  {
    title: 'Run Trials',
    icon: 'tabler:plant',
    description: 'Have access to agricultural land or greenhouse space? You can help test PAW treatments on different soil types and crop species.',
    color: 'green'
  },
  {
    title: 'Monitor & Document',
    icon: 'tabler:chart-bar',
    description: 'Deploy sensor kits for soil monitoring, collect data systematically, and document observations for the research commons.',
    color: 'blue'
  },
  {
    title: 'Analyze Data',
    icon: 'tabler:chart-line',
    description: 'Help process salinity/yield datasets, create visualizations, identify patterns, and contribute to publications.',
    color: 'purple'
  },
  {
    title: 'Build Protocols',
    icon: 'tabler:file-text',
    description: 'Document replication protocols, create guides for other researchers, and contribute to open-source methodologies.',
    color: 'yellow'
  }
];

const lookingFor = [
  {
    category: 'Expertise',
    items: [
      'Soil scientists and agronomists',
      'Plant physiologists familiar with salinity stress',
      'Plasma physics/chemistry researchers',
      'Community partners with local knowledge'
    ]
  },
  {
    category: 'Resources',
    items: [
      'Access to test plots or greenhouse facilities',
      'Soil moisture and salinity monitoring equipment',
      'Lab facilities for water quality analysis',
      'Field sites with documented salinity challenges'
    ]
  },
  {
    category: 'Support',
    items: [
      'Literature review contributors',
      'Data analysis and visualization help',
      'Documentation and protocol writing',
      'Connections to agricultural extension services'
    ]
  }
];
---

<Layout metadata={metadata}>
  <!-- Breadcrumb -->
  <div class="bg-primary-900 border-b border-gray-700/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4">
      <nav class="text-sm text-gray-400 font-mono">
        <a href="/pathways" class="hover:text-living-earth transition">Pathways</a>
        <span class="mx-2">/</span>
        <a href="/lab" class="hover:text-yellow-400 transition">Lab</a>
        <span class="mx-2">/</span>
        <a href="/lab/water" class="hover:text-yellow-400 transition">Plasma-Water Interface</a>
        <span class="mx-2">/</span>
        <span class="text-white">Saltwater Irrigation</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-primary-900 pt-16 pb-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <!-- Status Badge -->
      <div class="flex items-center gap-3 mb-6">
        <span class="px-4 py-2 bg-yellow-500/20 text-yellow-400 rounded-lg font-mono text-sm font-bold">
          Early Idea
        </span>
        <span class="text-gray-500 font-mono text-sm">Last updated: October 2025</span>
      </div>

      <!-- Title -->
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 font-mono">
        Saltwater Irrigation
      </h1>

      <!-- Summary -->
      <p class="text-2xl text-gray-300 leading-relaxed max-w-4xl">
        Exploring strategies for salinity-tolerant cultivation and soil recovery using plasma-activated water.
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="bg-primary-900 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 space-y-16">

      <!-- At a Glance -->
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Challenge -->
        <div class="bg-red-500/10 border-2 border-red-500/50 rounded-2xl p-8 backdrop-blur-sm">
          <h2 class="text-lg font-mono font-bold text-red-400 mb-4">THE CHALLENGE</h2>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-start gap-3">
              <span class="text-red-400 mt-1">•</span>
              <span>Saline encroachment threatens food security globally</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-red-400 mt-1">•</span>
              <span>Rising sea levels and poor irrigation practices increase soil salinity</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-red-400 mt-1">•</span>
              <span>Current approaches rely on expensive desalination or abandoning land</span>
            </li>
          </ul>
        </div>

        <!-- Approach -->
        <div class="bg-green-400/10 border-2 border-green-400/50 rounded-2xl p-8 backdrop-blur-sm">
          <h2 class="text-lg font-mono font-bold text-green-400 mb-4">OUR APPROACH</h2>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-start gap-3">
              <span class="text-green-400 mt-1">•</span>
              <span>Test plasma-activated saltwater for crop growth viability</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-400 mt-1">•</span>
              <span>Identify which species tolerate PAW-treated saline water</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-400 mt-1">•</span>
              <span>Investigate PAW's role in accelerating soil remediation</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Why This Matters -->
      <div class="bg-arc-electric/10 border-2 border-arc-electric/30 rounded-2xl p-8 backdrop-blur-sm">
        <h2 class="text-lg font-mono font-bold text-arc-electric mb-6">WHY THIS MATTERS</h2>
        <div class="space-y-4 text-gray-300 leading-relaxed">
          <p>
            Soil salinization affects <strong class="text-white">millions of hectares worldwide</strong>, particularly in coastal regions and areas with intensive irrigation. As climate change accelerates sea level rise, the problem intensifies.
          </p>
          <p>
            <strong class="text-living-earth">Plasma-activated water (PAW) shows promise in agriculture — but most research focuses on freshwater. Understanding tolerance and recovery under saline conditions is critical for coastal and arid regions.</strong>
          </p>
        </div>
      </div>

      <!-- Research Questions -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-8 font-mono">Research Questions</h2>
        <ol class="space-y-4 max-w-4xl">
          {researchQuestions.map((question, index) => (
            <li class="flex gap-4">
              <span class="text-2xl font-bold text-arc-electric font-mono flex-shrink-0">{(index + 1).toString().padStart(2, '0')}</span>
              <p class="text-lg text-gray-300 leading-relaxed">{question}</p>
            </li>
          ))}
        </ol>
      </div>

      <!-- Current Status -->
      <div class="bg-yellow-500/10 border border-yellow-500/30 rounded-2xl p-8 backdrop-blur-sm">
        <h2 class="text-2xl font-bold text-white mb-4 font-mono">Current Status</h2>
        <p class="text-lg text-gray-300 leading-relaxed">
          <strong class="text-yellow-400">Literature review phase.</strong> Seeking partners with agronomy expertise, access to test plots, and communities facing salinity challenges.
        </p>
      </div>

      <!-- Timeline -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-8 font-mono">Project Timeline</h2>
        <div class="space-y-6">
          {timeline.map((item, index) => (
            <div class={`relative pl-8 pb-8 ${index < timeline.length - 1 ? 'border-l-2 border-gray-700' : ''}`}>
              {/* Timeline Dot */}
              <div class={`absolute left-0 top-0 w-4 h-4 rounded-full transform -translate-x-[9px] ${item.status === 'current' ? 'bg-living-earth animate-pulse' : 'bg-gray-600'}`}></div>

              {/* Content */}
              <div class={`bg-gray-900/30 border ${item.status === 'current' ? 'border-living-earth/30' : 'border-gray-700/50'} rounded-xl p-6 backdrop-blur-sm`}>
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-3">
                  <h3 class="text-xl font-bold text-white font-mono">{item.phase}</h3>
                  <span class="text-sm font-mono text-gray-400">{item.date}</span>
                </div>
                <p class="text-gray-300 leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- What We're Looking For -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-8 font-mono">What We're Looking For</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {lookingFor.map((section) => (
            <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 backdrop-blur-sm">
              <h3 class="text-xl font-bold text-living-earth mb-4 font-mono">{section.category}</h3>
              <ul class="space-y-3">
                {section.items.map((item) => (
                  <li class="flex items-start gap-3 text-gray-300">
                    <span class="text-living-earth mt-1">→</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <!-- Ways to Contribute -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-8 font-mono">Ways to Contribute</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {contributions.map((contrib) => (
            <div class={`bg-${contrib.color}-400/5 border border-${contrib.color}-400/30 rounded-xl p-6 backdrop-blur-sm hover:scale-[1.02] transition-all duration-300`}>
              <div class="flex items-center gap-3 mb-4">
                <Icon name={contrib.icon} class={`w-8 h-8 text-${contrib.color}-400`} />
                <h3 class="text-xl font-bold text-white font-mono">{contrib.title}</h3>
              </div>
              <p class="text-gray-300 leading-relaxed">{contrib.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Get Involved CTA -->
      <div class="bg-gradient-to-br from-arc-electric/20 via-living-earth/10 to-transparent border border-arc-electric/30 rounded-2xl p-8 md:p-12 backdrop-blur-sm text-center">
        <h2 class="text-3xl font-bold text-white mb-4 font-mono">Ready to Join This Project?</h2>
        <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
          Whether you're a researcher, farmer, or community organizer—there's a role for you in this work.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://docs.google.com/forms/d/e/1FAIpQLScyVWKDifYxaVWOhdW-SPEXXDVEjBmVezv7W668lizvRCQuaQ/viewform"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-living-earth hover:bg-living-earth/90 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] shadow-xl shadow-living-earth/20"
          >
            Contact Us →
          </a>
          <a
            href="/get-started"
            class="px-8 py-4 bg-arc-electric hover:bg-arc-electric/90 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] shadow-xl shadow-arc-electric/20"
          >
            Get Started
          </a>
          <a
            href="https://discord.com/invite/DA8BPA3VsN"
            target="_blank"
            class="px-8 py-4 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05]"
          >
            Join Discord
          </a>
        </div>
      </div>

      <!-- Related Projects -->
      <div>
        <h2 class="text-3xl font-bold text-white mb-6 font-mono">Related Projects</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <a href="/lab/water" class="group bg-gray-900/30 border border-gray-700/50 hover:border-living-earth/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-living-earth transition">View All Plasma-Water Projects →</h3>
            <p class="text-sm text-gray-400">Explore other water treatment and remediation research</p>
          </a>
          <a href="/lab" class="group bg-gray-900/30 border border-gray-700/50 hover:border-yellow-400/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-yellow-400 transition">Back to Lab →</h3>
            <p class="text-sm text-gray-400">See all experimental research streams</p>
          </a>
          <a href="/pathways" class="group bg-gray-900/30 border border-gray-700/50 hover:border-arc-electric/50 rounded-xl p-6 backdrop-blur-sm transition-all duration-300">
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-arc-electric transition">Explore Pathways →</h3>
            <p class="text-sm text-gray-400">Discover Framework and Commons work</p>
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>
