---
import Layout from '~/layouts/Layout.astro';
import Logo from '~/components/ui/Logo.astro';
import AnimatedLogo from '~/components/ui/AnimatedLogo.astro';
---

<Layout metadata={{ title: 'Logo Demo - arc^' }}>
  <div class="min-h-screen bg-gradient-to-b from-gray-900 to-black py-16 px-4">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-5xl font-mono font-bold text-white text-center mb-4">
        arc<span class="text-[#00FFFF]">^</span> Logo System
      </h1>
      <p class="text-gray-400 text-center mb-16 text-lg">
        Production-ready logo component with multiple variants
      </p>

      <!-- Size Variants -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">Size Variants</h2>

        <div class="space-y-12">
          <!-- Large -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-4 font-mono">size="lg"</p>
            <Logo size="lg" />
          </div>

          <!-- Medium (Default) -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-4 font-mono">size="md" (default)</p>
            <Logo size="md" />
          </div>

          <!-- Small -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-4 font-mono">size="sm"</p>
            <Logo size="sm" />
          </div>
        </div>
      </section>

      <!-- Display Options -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">Display Options</h2>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Full Logo -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">Full Logo (default)</p>
            <div class="flex justify-center">
              <Logo size="md" />
            </div>
          </div>

          <!-- Text Only -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">Text Only</p>
            <div class="flex justify-center">
              <Logo size="md" showMark={false} />
            </div>
          </div>

          <!-- Mark Only -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">Mark Only (icon)</p>
            <div class="flex justify-center">
              <Logo size="md" showText={false} />
            </div>
          </div>
        </div>
      </section>

      <!-- Animation Variants -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">Animation Variants</h2>
        <p class="text-gray-400 mb-8">Hover over each logo to see the animation! (No delays, instant fun)</p>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Subtle Animation -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">animation="subtle"</p>
            <div class="flex justify-center">
              <AnimatedLogo size="md" animation="subtle" />
            </div>
            <p class="text-gray-500 text-xs mt-4 text-center">Gentle scale + caret lift</p>
          </div>

          <!-- Playful Animation -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">animation="playful"</p>
            <div class="flex justify-center">
              <AnimatedLogo size="md" animation="playful" />
            </div>
            <p class="text-gray-500 text-xs mt-4 text-center">Bouncy + arcs glow their own colors!</p>
            <p class="text-gray-500 text-xs text-center">(Cyan arcs glow cyan, green arc glows green)</p>
          </div>

          <!-- Glow Animation -->
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">animation="glow"</p>
            <div class="flex justify-center">
              <AnimatedLogo size="md" animation="glow" />
            </div>
            <p class="text-gray-500 text-xs mt-4 text-center">Soft glow effect</p>
          </div>
        </div>

        <div class="mt-8 bg-green-900/20 border border-green-500/40 rounded-lg p-6">
          <h3 class="text-green-400 font-semibold mb-2">✓ Whimsy Principles Applied</h3>
          <ul class="text-gray-300 text-sm space-y-1">
            <li>• CSS-only animations (lightweight, static-site friendly)</li>
            <li>• Instant responses (no delays or fade-ins)</li>
            <li>• Springy, bouncy feel (cubic-bezier easing)</li>
            <li>• Respects prefers-reduced-motion</li>
            <li>• Satisfying click feedback</li>
          </ul>
        </div>
      </section>

      <!-- Logo on Different Backgrounds -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">On Different Backgrounds</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Dark Background -->
          <div class="bg-black border border-gray-700/50 rounded-lg p-8">
            <p class="text-gray-400 text-sm mb-6 font-mono">On Pure Black</p>
            <div class="flex justify-center">
              <Logo size="md" />
            </div>
          </div>

          <!-- Hero Gradient Background -->
          <div
            class="border border-gray-700/50 rounded-lg p-8"
            style="background: radial-gradient(circle at top, #181f3d 0%, #080E21 90%);"
          >
            <p class="text-gray-400 text-sm mb-6 font-mono">On Hero Gradient</p>
            <div class="flex justify-center">
              <Logo size="md" />
            </div>
          </div>
        </div>
      </section>

      <!-- Brand Colors Reference -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">Logo Colors</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 rounded-lg bg-[#00FFFF]"></div>
              <div>
                <h3 class="text-white font-semibold mb-1">Arc Electric Teal</h3>
                <p class="text-gray-400 text-sm font-mono">#00FFFF</p>
                <p class="text-gray-500 text-xs">Used for caret (^) and upper arcs</p>
              </div>
            </div>
          </div>

          <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 rounded-lg bg-[#38B281]"></div>
              <div>
                <h3 class="text-white font-semibold mb-1">Living Earth Green</h3>
                <p class="text-gray-400 text-sm font-mono">#38B281</p>
                <p class="text-gray-500 text-xs">Used for bottom arc (ecology)</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Usage Code -->
      <section class="mb-20">
        <h2 class="text-3xl font-mono font-semibold text-[#674EF3] mb-8">Usage Code</h2>

        <div class="bg-gray-900 border border-gray-700 rounded-lg p-6 overflow-x-auto">
          <pre class="text-gray-300 text-sm font-mono"><code>{`---
import Logo from '~/components/ui/Logo.astro';
---

<!-- Full logo (default) -->
<Logo />

<!-- Different sizes -->
<Logo size="sm" />
<Logo size="md" />
<Logo size="lg" />

<!-- Display options -->
<Logo showText={false} />  <!-- Icon only -->
<Logo showMark={false} />  <!-- Text only -->

<!-- With custom classes -->
<Logo className="my-8" />
`}</code></pre>
        </div>
      </section>

      <!-- Accessibility Info -->
      <section class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8">
        <h2 class="text-2xl font-mono font-semibold text-[#14B8A6] mb-4">Accessibility Features</h2>
        <ul class="text-gray-300 space-y-2">
          <li class="flex items-start gap-2">
            <span class="text-green-400 mt-1">✓</span>
            <span>Proper ARIA labels and role attributes</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-400 mt-1">✓</span>
            <span>SVG title element for screen readers</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-400 mt-1">✓</span>
            <span>High contrast colors (WCAG AA compliant)</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-400 mt-1">✓</span>
            <span>Responsive sizing for all viewports</span>
          </li>
        </ul>
      </section>

      <!-- Back Link -->
      <div class="mt-12 text-center">
        <a href="/" class="text-[#674EF3] hover:text-[#5640d9] font-medium inline-flex items-center gap-2">
          ← Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
