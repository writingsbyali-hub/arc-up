---
// ====================================================================
// GET STARTED - BOLD TYPOGRAPHY + CREATIVE LAYOUTS
// Big type, asymmetry, personality
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Get Started — arc^',
};
---

<Layout metadata={metadata}>

  <!-- ============================================ -->
  <!-- HERO - MASSIVE TYPE -->
  <!-- ============================================ -->
  <section class="relative py-16 md:py-24 bg-[radial-gradient(circle_at_top,#181f3d_0%,#080E21_90%)]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">

      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-gray-400">
          <li><a href="/" class="hover:text-arc-electric transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900 rounded">home</a></li>
          <li><span class="text-gray-600">/</span></li>
          <li class="text-white font-medium" aria-current="page">get started</li>
        </ol>
      </nav>

      <h1 class="text-lg md:text-xl font-mono font-bold mb-8 tracking-tight text-white leading-[0.95]">
        let's build this <span class="text-arc-electric">together</span>
      </h1>
      <div class="max-w-3xl">
        <p class="text-lg md:text-xl text-gray-300 leading-relaxed mb-6">
          Arc^ is open plasma research for ecological regeneration. Everything we build—hardware, protocols, data—is shared freely under open licenses.
        </p>
        <p class="text-lg md:text-xl text-white leading-relaxed">
          No patents. No gatekeeping. Just science in service of repair.
        </p>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- WHO ARE YOU? - PERSONA NAVIGATION -->
  <!-- ============================================ -->
  <section id="who-are-you" class="bg-gray-800/40 backdrop-blur-sm py-6 md:py-10 border-t border-gray-700/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">

      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-white font-mono mb-3">
          Who are you?
        </h2>
        <p class="text-sm md:text-base text-gray-300 max-w-2xl mx-auto">
          Choose your path. Each persona has tailored guidance and recommended projects.
        </p>
      </div>

      <!-- Persona Selector Grid -->
      <div class="grid grid-cols-2 md:grid-cols-5 gap-3 md:gap-4 mb-8">
        <button
          data-persona="student"
          tabindex="0"
          aria-label="Student persona - for integrating plasma research with coursework"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-yellow-400/30 hover:border-yellow-400 hover:bg-yellow-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:school" class="w-8 h-8 md:w-10 md:h-10 text-yellow-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-yellow-400">Student</p>
        </button>

        <button
          data-persona="researcher"
          tabindex="0"
          aria-label="Researcher persona - for validating and co-developing frameworks"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-green-400/30 hover:border-green-400 hover:bg-green-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:microscope" class="w-8 h-8 md:w-10 md:h-10 text-green-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-green-400">Researcher</p>
        </button>

        <button
          data-persona="maker"
          tabindex="0"
          aria-label="Maker persona - for building and tinkering with hardware"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-purple-400/30 hover:border-purple-400 hover:bg-purple-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:tool" class="w-8 h-8 md:w-10 md:h-10 text-purple-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-purple-400">Maker</p>
        </button>

        <button
          data-persona="practitioner"
          tabindex="0"
          aria-label="Practitioner persona - for applying technologies locally"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-blue-400/30 hover:border-blue-400 hover:bg-blue-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:world" class="w-8 h-8 md:w-10 md:h-10 text-blue-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-blue-400">Practitioner</p>
        </button>

        <button
          data-persona="curious"
          tabindex="0"
          aria-label="Just Curious persona - for exploring and learning"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-arc-electric/30 hover:border-arc-electric hover:bg-arc-electric/10 transition-all duration-300 group col-span-2 md:col-span-1 focus:outline-none focus:ring-2 focus:ring-arc-electric focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:bulb" class="w-8 h-8 md:w-10 md:h-10 text-arc-electric mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-arc-electric">Just Curious</p>
        </button>
      </div>

      <!-- Persona Content Panels -->
      <div class="persona-content-container">

        <!-- Student Panel -->
        <div id="content-student" class="persona-content hidden">
          <div class="bg-gradient-to-br from-yellow-400/10 via-gray-900/50 to-transparent border border-yellow-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:school" class="w-8 h-8 text-yellow-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-yellow-400">Student</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Integrate plasma research with your coursework. Build your portfolio while advancing open science. Explore hands-on experimental work across water, ecosystems, and hardware.
              </p>

              <a href="/projects?pillar=lab" class="inline-block px-6 py-3 bg-yellow-400 hover:bg-yellow-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                Browse Lab Streams →
              </a>
            </div>
          </div>
        </div>

        <!-- Researcher Panel -->
        <div id="content-researcher" class="persona-content hidden">
          <div class="bg-gradient-to-br from-green-400/10 via-gray-900/50 to-transparent border border-green-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:microscope" class="w-8 h-8 text-green-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-green-400">Researcher</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Validate, replicate, and co-develop early frameworks. Your expertise shapes responsible methods for plasma research. Help establish protocols, governance, and validation systems.
              </p>

              <a href="/projects?pillar=framework" class="inline-block px-6 py-3 bg-green-400 hover:bg-green-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                Browse Framework Streams →
              </a>
            </div>
          </div>
        </div>

        <!-- Maker Panel -->
        <div id="content-maker" class="persona-content hidden">
          <div class="bg-gradient-to-br from-purple-400/10 via-gray-900/50 to-transparent border border-purple-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:tool" class="w-8 h-8 text-purple-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-purple-400">Maker</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Build, tinker, and iterate. Design open-source plasma hardware or create data visualization tools. Share your builds and code with the community.
              </p>

              <a href="/projects" class="inline-block px-6 py-3 bg-purple-400 hover:bg-purple-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                Browse All Streams →
              </a>
            </div>
          </div>
        </div>

        <!-- Practitioner Panel -->
        <div id="content-practitioner" class="persona-content hidden">
          <div class="bg-gradient-to-br from-blue-400/10 via-gray-900/50 to-transparent border border-blue-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:world" class="w-8 h-8 text-blue-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-blue-400">Practitioner</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Apply plasma technologies in real contexts. Monitor outcomes, document field data, and share practical lessons. Your local knowledge strengthens collective understanding.
              </p>

              <a href="/projects?pillar=lab" class="inline-block px-6 py-3 bg-blue-400 hover:bg-blue-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                Browse Lab Streams →
              </a>
            </div>
          </div>
        </div>

        <!-- Just Curious Panel -->
        <div id="content-curious" class="persona-content hidden">
          <div class="bg-gradient-to-br from-arc-electric/10 via-gray-900/50 to-transparent border border-arc-electric/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:bulb" class="w-8 h-8 text-arc-electric" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-arc-electric">Just Curious</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Start by exploring the research approach and see what resonates. Read <a href="/about" class="text-arc-electric hover:underline">our story</a>, explore <a href="/research" class="text-arc-electric hover:underline">the science</a>, or browse projects. No pressure—take your time.
              </p>

              <a href="/projects" class="inline-block px-6 py-3 bg-arc-electric hover:bg-arc-electric/90 text-white rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                Browse All Streams →
              </a>
            </div>
          </div>
        </div>

      </div>

    </div>
  </section>

  <!-- Simple Discord CTA -->
  <section class="bg-gradient-to-b from-primary-900 to-primary-950 py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white font-mono mb-4">
        Questions?
      </h2>
      <p class="text-lg text-gray-300 mb-8">
        Join the Discord to connect with the community.
      </p>
      <a
        href="https://discord.com/invite/DA8BPA3VsN"
        target="_blank"
        class="inline-block px-8 py-4 bg-arc-electric hover:bg-arc-electric/90 text-white rounded-lg font-mono font-bold text-lg transition-all hover:scale-105 hover:shadow-xl hover:shadow-arc-electric/50"
      >
        Join Discord →
      </a>
    </div>
  </section>

  <script is:inline>
    function initGetStartedPage() {
      // Persona Navigation System
      const personaButtons = document.querySelectorAll('.persona-btn');
      const personaContents = document.querySelectorAll('.persona-content');

      if (personaButtons.length === 0) return; // Exit if elements don't exist

      function showPersona(personaId) {
        // Hide all content panels
        personaContents.forEach(content => {
          content.classList.add('hidden');
        });

        // Remove active state from all buttons
        personaButtons.forEach(btn => {
          btn.classList.remove('ring-2', 'ring-offset-2', 'ring-offset-primary-900');
          const persona = btn.getAttribute('data-persona');
          if (persona === 'student') {
            btn.classList.remove('ring-yellow-400', 'border-yellow-400', 'bg-yellow-400/10');
            btn.classList.add('border-yellow-400/30');
          } else if (persona === 'researcher') {
            btn.classList.remove('ring-green-400', 'border-green-400', 'bg-green-400/10');
            btn.classList.add('border-green-400/30');
          } else if (persona === 'maker') {
            btn.classList.remove('ring-purple-400', 'border-purple-400', 'bg-purple-400/10');
            btn.classList.add('border-purple-400/30');
          } else if (persona === 'practitioner') {
            btn.classList.remove('ring-blue-400', 'border-blue-400', 'bg-blue-400/10');
            btn.classList.add('border-blue-400/30');
          } else if (persona === 'curious') {
            btn.classList.remove('ring-arc-electric', 'border-arc-electric', 'bg-arc-electric/10');
            btn.classList.add('border-arc-electric/30');
          }
        });

        // Show selected content panel
        const selectedContent = document.getElementById(`content-${personaId}`);
        if (selectedContent) {
          selectedContent.classList.remove('hidden');
        }

        // Add active state to selected button
        const activeButton = document.querySelector(`[data-persona="${personaId}"]`);
        if (activeButton) {
          activeButton.classList.add('ring-2', 'ring-offset-2', 'ring-offset-primary-900');
          if (personaId === 'student') {
            activeButton.classList.remove('border-yellow-400/30');
            activeButton.classList.add('ring-yellow-400', 'border-yellow-400', 'bg-yellow-400/10');
          } else if (personaId === 'researcher') {
            activeButton.classList.remove('border-green-400/30');
            activeButton.classList.add('ring-green-400', 'border-green-400', 'bg-green-400/10');
          } else if (personaId === 'maker') {
            activeButton.classList.remove('border-purple-400/30');
            activeButton.classList.add('ring-purple-400', 'border-purple-400', 'bg-purple-400/10');
          } else if (personaId === 'practitioner') {
            activeButton.classList.remove('border-blue-400/30');
            activeButton.classList.add('ring-blue-400', 'border-blue-400', 'bg-blue-400/10');
          } else if (personaId === 'curious') {
            activeButton.classList.remove('border-arc-electric/30');
            activeButton.classList.add('ring-arc-electric', 'border-arc-electric', 'bg-arc-electric/10');
          }
        }

        // Smooth scroll to content
        if (selectedContent) {
          selectedContent.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      }

      // Add click handlers to persona buttons
      personaButtons.forEach(button => {
        button.addEventListener('click', () => {
          const persona = button.getAttribute('data-persona');
          showPersona(persona);
        });
      });

      // Add keyboard navigation (arrow keys)
      personaButtons.forEach((button, index) => {
        button.addEventListener('keydown', (e) => {
          let newIndex;

          if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
            e.preventDefault();
            newIndex = (index + 1) % personaButtons.length;
          } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
            e.preventDefault();
            newIndex = (index - 1 + personaButtons.length) % personaButtons.length;
          } else if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            button.click();
            return;
          }

          if (newIndex !== undefined) {
            personaButtons[newIndex].focus();
          }
        });
      });

      // Auto-select first persona on page load
      if (personaButtons.length > 0) {
        showPersona('student');
      }
    }

    // Initialize on first load
    document.addEventListener('DOMContentLoaded', initGetStartedPage);

    // Reinitialize after navigation (view transitions)
    document.addEventListener('astro:after-swap', initGetStartedPage);
  </script>
</Layout>
