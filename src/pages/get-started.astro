---
// ====================================================================
// GET STARTED - BOLD TYPOGRAPHY + CREATIVE LAYOUTS
// Big type, asymmetry, personality
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ContactModal from '~/components/widgets/ContactModal.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Get Started — arc^',
};
---

<Layout metadata={metadata}>

  <!-- ============================================ -->
  <!-- HERO - MASSIVE TYPE -->
  <!-- ============================================ -->
  <section class="relative py-8 md:py-12 bg-[radial-gradient(circle_at_top,#181f3d_0%,#080E21_90%)]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">

      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-gray-400">
          <li><a href="/" class="hover:text-arc-electric transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900 rounded">home</a></li>
          <li><span class="text-gray-600">/</span></li>
          <li class="text-white font-medium" aria-current="page">get started</li>
        </ol>
      </nav>

      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-mono mb-4 tracking-tight text-white">
          get started
        </h1>
        <p class="text-xl text-gray-200 font-semibold max-w-3xl mx-auto leading-relaxed">
          Join the work. No patents, no gatekeeping, just open science.
        </p>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- WHO ARE YOU? - PERSONA NAVIGATION -->
  <!-- ============================================ -->
  <section id="who-are-you" class="bg-primary-900 py-6 md:py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">

      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-arc-electric font-mono mb-3">
          Who are you?
        </h2>
        <p class="text-sm md:text-base text-gray-300 max-w-2xl mx-auto">
          Choose your path. Each persona has tailored guidance and recommended projects.
        </p>
      </div>

      <!-- Persona Selector Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 mb-8">
        <button
          data-persona="student"
          tabindex="0"
          aria-label="Student persona - for integrating plasma research with coursework"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-yellow-400/30 hover:border-yellow-400 hover:bg-yellow-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:school" class="w-8 h-8 md:w-10 md:h-10 text-yellow-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-yellow-400">Student</p>
        </button>

        <button
          data-persona="researcher"
          tabindex="0"
          aria-label="Researcher persona - for validating and co-developing frameworks"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-green-400/30 hover:border-green-400 hover:bg-green-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:microscope" class="w-8 h-8 md:w-10 md:h-10 text-green-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-green-400">Researcher</p>
        </button>

        <button
          data-persona="practitioner"
          tabindex="0"
          aria-label="Practitioner persona - for applying technologies locally"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-blue-400/30 hover:border-blue-400 hover:bg-blue-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:world" class="w-8 h-8 md:w-10 md:h-10 text-blue-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-blue-400">Practitioner</p>
        </button>

        <button
          data-persona="collaborator"
          tabindex="0"
          aria-label="Collaborator persona - for designers, coders, and open contributors"
          class="persona-btn p-4 md:p-5 rounded-xl bg-gray-900/50 border-2 border-purple-400/30 hover:border-purple-400 hover:bg-purple-400/10 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-primary-900"
        >
          <Icon name="tabler:users" class="w-8 h-8 md:w-10 md:h-10 text-purple-400 mx-auto mb-2" />
          <p class="text-sm md:text-base font-mono font-bold text-purple-400">Collaborator</p>
        </button>
      </div>

      <!-- Persona Content Panels -->
      <div class="persona-content-container">

        <!-- Student Panel -->
        <div id="content-student" class="persona-content hidden">
          <div class="bg-gradient-to-br from-yellow-400/10 via-gray-900/50 to-transparent border border-yellow-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:school" class="w-8 h-8 text-yellow-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-yellow-400">Students / Degree-Based Researchers</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Integrate ArcUp research into coursework, thesis, or honours projects. Propose a topic, find a supervisor, and align with ArcUp's open-licensing framework.
              </p>

              <div class="space-y-3">
                <p class="font-semibold text-white">What you'll do:</p>
                <ul class="list-disc list-inside space-y-1 text-gray-300">
                  <li>Propose project with your university supervisor</li>
                  <li>Request permission to share data back under open-license terms</li>
                  <li>Gain access to methods and datasets</li>
                </ul>
              </div>

              <div class="flex flex-wrap gap-3 pt-2">
                <a href="https://workspace.xbyali.page" target="_blank" class="inline-block px-6 py-3 bg-yellow-400/20 hover:bg-yellow-400/30 text-yellow-400 border border-yellow-400 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Access Workspace →
                </a>
                <button data-modal-persona="student" class="contact-modal-btn inline-block px-6 py-3 bg-yellow-400 hover:bg-yellow-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Join the Field →
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Researcher Panel -->
        <div id="content-researcher" class="persona-content hidden">
          <div class="bg-gradient-to-br from-green-400/10 via-gray-900/50 to-transparent border border-green-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:microscope" class="w-8 h-8 text-green-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-green-400">Academics / Independent Researchers</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Review and critique ArcUp frameworks, validate findings, and guide ethical development. Your expertise shapes responsible methods for plasma research.
              </p>

              <div class="space-y-3">
                <p class="font-semibold text-white">What you'll do:</p>
                <ul class="list-disc list-inside space-y-1 text-gray-300">
                  <li>Review open datasets and methods</li>
                  <li>Submit validation notes or critiques</li>
                  <li>Contribute to research governance and ethical design</li>
                </ul>
              </div>

              <div class="flex flex-wrap gap-3 pt-2">
                <a href="https://workspace.xbyali.page" target="_blank" class="inline-block px-6 py-3 bg-green-400/20 hover:bg-green-400/30 text-green-400 border border-green-400 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Access Workspace →
                </a>
                <button data-modal-persona="researcher" class="contact-modal-btn inline-block px-6 py-3 bg-green-400 hover:bg-green-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Contribute Insights →
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Collaborator Panel -->
        <div id="content-collaborator" class="persona-content hidden">
          <div class="bg-gradient-to-br from-purple-400/10 via-gray-900/50 to-transparent border border-purple-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:users" class="w-8 h-8 text-purple-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-purple-400">Open Collaborators</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Not tied to a specific role but want to help? Designers, coders, documenters, storytellers, translators, or anyone inspired by the work.
              </p>

              <div class="space-y-3">
                <p class="font-semibold text-white">Ways to contribute:</p>
                <ul class="list-disc list-inside space-y-1 text-gray-300">
                  <li>Design, development, and technical documentation</li>
                  <li>Content creation, storytelling, and translations</li>
                  <li>Community building and knowledge sharing</li>
                </ul>
              </div>

              <div class="flex flex-wrap gap-3 pt-2">
                <a href="https://workspace.xbyali.page" target="_blank" class="inline-block px-6 py-3 bg-purple-400/20 hover:bg-purple-400/30 text-purple-400 border border-purple-400 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Access Workspace →
                </a>
                <button data-modal-persona="collaborator" class="contact-modal-btn inline-block px-6 py-3 bg-purple-400 hover:bg-purple-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Get Involved →
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Practitioner Panel -->
        <div id="content-practitioner" class="persona-content hidden">
          <div class="bg-gradient-to-br from-blue-400/10 via-gray-900/50 to-transparent border border-blue-400/30 rounded-xl p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="tabler:world" class="w-8 h-8 text-blue-400" />
              <h3 class="text-xl md:text-2xl font-mono font-bold text-blue-400">Community Practitioners</h3>
            </div>

            <div class="space-y-4 text-base text-gray-300">
              <p class="text-lg leading-relaxed">
                Run small-scale experiments (e.g., plasma water, ecosystem trials) in the field. Complete onboarding and safety agreements before accessing detailed methods.
              </p>

              <div class="space-y-3">
                <p class="font-semibold text-white">What you'll do:</p>
                <ul class="list-disc list-inside space-y-1 text-gray-300">
                  <li>Complete safety and onboarding module</li>
                  <li>Agree to ArcUp's community framework and data-sharing ethics</li>
                  <li>Access detailed protocols and upload local results</li>
                </ul>
              </div>

              <div class="flex flex-wrap gap-3 pt-2">
                <a href="https://workspace.xbyali.page" target="_blank" class="inline-block px-6 py-3 bg-blue-400/20 hover:bg-blue-400/30 text-blue-400 border border-blue-400 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Begin Onboarding →
                </a>
                <button data-modal-persona="practitioner" class="contact-modal-btn inline-block px-6 py-3 bg-blue-400 hover:bg-blue-300 text-gray-900 rounded-lg font-mono font-bold text-center transition-all hover:scale-[1.02]">
                  Join the Field →
                </button>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </section>

  <!-- Community CTA -->
  <section class="py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="bg-[#131A33]/50 backdrop-blur-sm rounded-2xl shadow-2xl border border-gray-700/50 p-8 md:p-10 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white font-mono mb-4">
          Join the Community
        </h2>
        <p class="text-lg text-gray-300 mb-8">
          Connect with others, follow updates, and access YouTube walkthroughs.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://discord.com/invite/bp3HbfyAeS"
            target="_blank"
            class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-arc-electric hover:bg-arc-electric/90 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] shadow-lg shadow-arc-electric/50 group"
          >
            <span>Join Discord</span>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="https://www.youtube.com/@arc-arcup"
            target="_blank"
            class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-red-600 hover:bg-red-700 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] shadow-lg shadow-red-600/50 group"
          >
            <span>Watch on YouTube</span>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Modal -->
  <ContactModal />

  <!-- Persona navigation and modal interactions handled by global-interactions.js -->
</Layout>
