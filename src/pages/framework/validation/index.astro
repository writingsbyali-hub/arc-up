---
// ====================================================================
// VALIDATION & REPLICATION STREAM PAGE
// Ensuring reproducibility and peer validation
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Validation & Replication — Framework Stream',
};

const projects = [
  {
    title: 'Open Peer Review',
    slug: '/framework/validation/peer-review',
    summary: 'Building transparent peer review processes for validating experimental results and methodologies.',
    tags: ['Peer Review', 'Quality Assurance', 'Transparency'],
    updated: 'Coming Soon'
  },
  {
    title: 'Replication Protocols',
    slug: '/framework/validation/replication',
    summary: 'Creating frameworks for independent researchers to replicate and verify arc^ experiments.',
    tags: ['Reproducibility', 'Validation', 'Open Science'],
    updated: 'Coming Soon'
  },
  {
    title: 'Data Verification Methods',
    slug: '/framework/validation/data-verification',
    summary: 'Developing methods to verify data integrity and authenticity in open research contexts.',
    tags: ['Data Quality', 'Verification', 'Trust'],
    updated: 'Coming Soon'
  },
];
---

<Layout metadata={metadata}>
  <!-- Breadcrumb -->
  <div class="bg-primary-900 border-b border-gray-700/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4">
      <nav class="text-sm text-gray-400 font-mono">
        <a href="/projects" class="hover:text-living-earth transition">projects</a>
        <span class="mx-2">/</span>
        <a href="/framework" class="hover:text-green-400 transition">framework</a>
        <span class="mx-2">/</span>
        <span class="text-white">validation & replication</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <Hero
    title="Validation & Replication"
    tagline="Framework Stream"
  >
    <Fragment slot="subtitle">
      <span class="text-gray-300">
        Ensuring reproducibility and verification. We build transparent processes for validating research and enabling independent replication.
      </span>
    </Fragment>
  </Hero>

  <!-- Main Content -->
  <section class="bg-primary-900 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">

      <!-- Projects -->
      <div class="mb-12">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold text-white font-mono">Projects</h2>
          <span class="text-sm text-gray-400 font-mono">{projects.length} total</span>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <a
              href={project.slug}
              class="group bg-gray-900/30 border border-gray-700/50 hover:border-green-400/60 rounded-xl p-6 backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] block"
            >
              <!-- Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-bold mb-2 font-mono text-white group-hover:text-green-400 transition">
                    {project.title}
                  </h3>
                </div>
                <svg class="w-6 h-6 text-gray-500 group-hover:text-green-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>

              <!-- Summary -->
              <p class="text-gray-300 mb-4 leading-relaxed">{project.summary}</p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-3">
                {project.tags.map((tag) => (
                  <span class="px-2 py-1 bg-gray-800/50 text-gray-400 text-xs rounded font-mono">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Footer -->
              <div class="text-xs text-gray-500 font-mono">
                Updated: {project.updated}
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Compact CTA -->
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 text-center">
        <p class="text-gray-300 mb-4">
          Ready to contribute to Validation & Replication?
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/get-started"
            class="px-6 py-3 bg-green-400 hover:bg-green-300 text-gray-900 rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] text-center"
          >
            Get Started
          </a>
          <a
            href="https://discord.com/invite/DA8BPA3VsN"
            target="_blank"
            class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] text-center"
          >
            Join Discord →
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>
