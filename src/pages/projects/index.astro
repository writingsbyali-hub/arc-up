---
// ====================================================================
// PROJECTS HUB PAGE - STREAM-LEVEL VIEW
// Shows all 9 streams directly with interest matching
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Projects — Find Your Contribution',
};

// All 9 streams with full details
const streams = [
  // LAB STREAMS
  {
    id: 'physical',
    name: 'Physical Plasma Systems',
    pillar: 'lab',
    pillarLabel: 'Lab',
    href: '/lab/physical',
    tagline: 'Hardware design and plasma generation',
    description: 'Design and test plasma architectures. Build modular components that can be 3D-printed, assembled safely, and replicated globally.',
    skills: ['Hardware', 'Electronics', 'Engineering', 'Prototyping'],
    color: 'yellow',
    bgGradient: 'from-yellow-500/10 via-yellow-500/5 to-transparent',
    borderColor: 'border-yellow-400/30',
    hoverBorder: 'hover:border-yellow-400',
    textColor: 'text-yellow-400',
    icon: 'tabler:bolt'
  },
  {
    id: 'water',
    name: 'Plasma-Water Interface',
    pillar: 'lab',
    pillarLabel: 'Lab',
    href: '/lab/water',
    tagline: 'Water treatment and chemistry',
    description: 'Investigate how plasma-treated water behaves. Test oxidation mechanisms, desalination methods, and pollutant breakdown pathways.',
    skills: ['Chemistry', 'Water', 'Field Research', 'Analysis'],
    color: 'yellow',
    bgGradient: 'from-yellow-500/10 via-yellow-500/5 to-transparent',
    borderColor: 'border-yellow-400/30',
    hoverBorder: 'hover:border-yellow-400',
    textColor: 'text-yellow-400',
    icon: 'tabler:droplet'
  },
  {
    id: 'ecosystem',
    name: 'Ecosystem Dynamics',
    pillar: 'lab',
    pillarLabel: 'Lab',
    href: '/lab/ecosystem',
    tagline: 'Ecological responses and resilience',
    description: 'Study how organisms and ecosystems respond to plasma-treated environments. Track genetic changes, monitor microbiome shifts, measure resilience.',
    skills: ['Biology', 'Ecology', 'Field Research', 'Modeling'],
    color: 'yellow',
    bgGradient: 'from-yellow-500/10 via-yellow-500/5 to-transparent',
    borderColor: 'border-yellow-400/30',
    hoverBorder: 'hover:border-yellow-400',
    textColor: 'text-yellow-400',
    icon: 'tabler:plant-2'
  },
  // FRAMEWORK STREAMS
  {
    id: 'protocols',
    name: 'Protocols',
    pillar: 'framework',
    pillarLabel: 'Framework',
    href: '/framework/protocols',
    tagline: 'Methodology and standards',
    description: 'Create reproducible experimental workflows. Build documentation so thorough that replication becomes trivial. Establish open-hardware standards.',
    skills: ['Documentation', 'Technical Writing', 'Research Methods'],
    color: 'green',
    bgGradient: 'from-green-400/10 via-green-400/5 to-transparent',
    borderColor: 'border-green-400/30',
    hoverBorder: 'hover:border-green-400',
    textColor: 'text-green-400',
    icon: 'tabler:clipboard-list'
  },
  {
    id: 'governance',
    name: 'Governance',
    pillar: 'framework',
    pillarLabel: 'Framework',
    href: '/framework/governance',
    tagline: 'Ethics and decision-making',
    description: 'Define and uphold the Non-Lethal Mandate. Design transparent decision-making processes. Develop commons-based IP frameworks.',
    skills: ['Ethics', 'Governance', 'Policy', 'Community Organizing'],
    color: 'green',
    bgGradient: 'from-green-400/10 via-green-400/5 to-transparent',
    borderColor: 'border-green-400/30',
    hoverBorder: 'hover:border-green-400',
    textColor: 'text-green-400',
    icon: 'tabler:users-group'
  },
  {
    id: 'validation',
    name: 'Validation',
    pillar: 'framework',
    pillarLabel: 'Framework',
    href: '/framework/validation',
    tagline: 'Peer review and reproducibility',
    description: 'Build peer review systems that work openly. Create pre-registration workflows. Design decentralized verification methods.',
    skills: ['Research Methods', 'Statistics', 'Peer Review'],
    color: 'green',
    bgGradient: 'from-green-400/10 via-green-400/5 to-transparent',
    borderColor: 'border-green-400/30',
    hoverBorder: 'hover:border-green-400',
    textColor: 'text-green-400',
    icon: 'tabler:checklist'
  },
  // COMMONS STREAMS
  {
    id: 'data',
    name: 'Data',
    pillar: 'commons',
    pillarLabel: 'Commons',
    href: '/commons/data',
    tagline: 'APIs and infrastructure',
    description: 'Design APIs that make data ingestion seamless. Build standardized schemas so datasets talk to each other. Create distributed storage systems.',
    skills: ['Software', 'Backend', 'APIs', 'Databases'],
    color: 'blue',
    bgGradient: 'from-blue-400/10 via-blue-400/5 to-transparent',
    borderColor: 'border-blue-400/30',
    hoverBorder: 'hover:border-blue-400',
    textColor: 'text-blue-400',
    icon: 'tabler:database'
  },
  {
    id: 'visualization',
    name: 'Visualization',
    pillar: 'commons',
    pillarLabel: 'Commons',
    href: '/commons/visualization',
    tagline: 'Dashboards and data viz',
    description: 'Design real-time monitoring dashboards. Build open-source visualization libraries. Create public data access interfaces.',
    skills: ['Frontend', 'Design', 'Data Viz', 'UX'],
    color: 'blue',
    bgGradient: 'from-blue-400/10 via-blue-400/5 to-transparent',
    borderColor: 'border-blue-400/30',
    hoverBorder: 'hover:border-blue-400',
    textColor: 'text-blue-400',
    icon: 'tabler:chart-line'
  },
  {
    id: 'modeling',
    name: 'Modeling',
    pillar: 'commons',
    pillarLabel: 'Commons',
    href: '/commons/modeling',
    tagline: 'Systems theory and simulation',
    description: 'Apply systems theory to ecosystem dynamics. Build resilience models that predict tipping points. Simulate coupling dynamics across scales.',
    skills: ['Modeling', 'Systems Theory', 'Mathematics', 'Simulation'],
    color: 'blue',
    bgGradient: 'from-blue-400/10 via-blue-400/5 to-transparent',
    borderColor: 'border-blue-400/30',
    hoverBorder: 'hover:border-blue-400',
    textColor: 'text-blue-400',
    icon: 'tabler:atom-2'
  }
];

// Interest tags mapped to specific streams
const interestTags = [
  { name: 'Hardware/Electronics', matches: ['physical'] },
  { name: 'Chemistry/Water', matches: ['water'] },
  { name: 'Biology/Ecology', matches: ['ecosystem'] },
  { name: 'Software/Data', matches: ['data'] },
  { name: 'Frontend/Design', matches: ['visualization'] },
  { name: 'Modeling/Systems', matches: ['modeling', 'ecosystem'] },
  { name: 'Documentation', matches: ['protocols'] },
  { name: 'Governance/Ethics', matches: ['governance'] },
  { name: 'Field Research', matches: ['water', 'ecosystem'] },
  { name: 'Backend/APIs', matches: ['data'] },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative py-8 md:py-12 bg-[radial-gradient(circle_at_top,#181f3d_0%,#080E21_90%)]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">

      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-gray-400">
          <li><a href="/" class="hover:text-arc-electric transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900 rounded">home</a></li>
          <li><span class="text-gray-600">/</span></li>
          <li class="text-white font-medium" aria-current="page">projects</li>
        </ol>
      </nav>

      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-mono mb-4 tracking-tight text-white">
          projects
        </h1>
        <p class="text-xl text-gray-200 font-semibold max-w-3xl mx-auto leading-relaxed">
          Nine active research streams where you can contribute.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="bg-primary-900 py-6 md:py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">

      <!-- Decision Helper - Not Sure Where to Start? -->
      <div class="max-w-4xl mx-auto mb-10">
        <div class="bg-gray-800/40 border border-gray-700/50 rounded-2xl p-6 md:p-8 backdrop-blur-sm">
          <h2 class="text-2xl md:text-3xl font-bold text-arc-electric mb-6 font-mono text-center">Not sure where to start?</h2>

          <!-- Expandable Interest Tags -->
          <details class="group" open>
            <summary class="cursor-pointer text-center py-2 text-gray-400 hover:text-arc-electric transition-colors list-none mb-4">
              <span class="font-mono text-lg">Select your skills & interests</span>
              <span class="inline-block ml-2 transform transition-transform group-open:rotate-180">▼</span>
            </summary>

            <div class="space-y-6">
              <p class="text-base text-gray-300 text-center">
                Select what you're interested in or good at, and we'll highlight matching streams:
              </p>

              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
                {interestTags.map((tag) => (
                  <label class="interest-tag flex items-center gap-2 p-3 bg-gray-900/30 rounded-lg border border-gray-700/30 hover:border-arc-electric/50 cursor-pointer transition-all">
                    <input
                      type="checkbox"
                      data-matches={JSON.stringify(tag.matches)}
                      class="interest-checkbox w-4 h-4 rounded border-gray-600 text-arc-electric focus:ring-arc-electric focus:ring-offset-primary-900"
                    />
                    <span class="text-sm text-gray-300">{tag.name}</span>
                  </label>
                ))}
              </div>

              <div class="text-center pt-4">
                <p class="text-sm text-gray-400 font-mono">
                  <span id="match-status">Select interests to see matching streams highlighted below</span>
                </p>
              </div>
            </div>
          </details>
        </div>
      </div>

      <!-- Pillar Filter Tabs -->
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        <button
          data-filter="all"
          class="filter-btn px-6 py-2 rounded-lg font-mono text-sm transition-all duration-300 bg-arc-electric text-white hover:bg-arc-electric/90"
        >
          All Streams
        </button>
        <button
          data-filter="lab"
          class="filter-btn px-6 py-2 rounded-lg font-mono text-sm transition-all duration-300 bg-yellow-400/20 text-yellow-400 border border-yellow-400/30 hover:bg-yellow-400/30"
        >
          Lab
        </button>
        <button
          data-filter="framework"
          class="filter-btn px-6 py-2 rounded-lg font-mono text-sm transition-all duration-300 bg-green-400/20 text-green-400 border border-green-400/30 hover:bg-green-400/30"
        >
          Framework
        </button>
        <button
          data-filter="commons"
          class="filter-btn px-6 py-2 rounded-lg font-mono text-sm transition-all duration-300 bg-blue-400/20 text-blue-400 border border-blue-400/30 hover:bg-blue-400/30"
        >
          Commons
        </button>
      </div>

      <!-- All Streams Grid -->
      <div id="streams-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 mb-10">
        {streams.map((stream) => (
          <a
            href={stream.href}
            data-stream={stream.id}
            data-pillar={stream.pillar}
            class={`stream-card group bg-gradient-to-br ${stream.bgGradient} border ${stream.borderColor} ${stream.hoverBorder} rounded-xl p-5 md:p-6 backdrop-blur-sm transition-all duration-300 hover:scale-[1.03] hover:shadow-xl block`}
          >
            <!-- Stream Header -->
            <div class="flex items-start justify-between mb-4">
              <Icon name={stream.icon} class={`w-10 h-10 ${stream.textColor} flex-shrink-0`} />
            </div>

            <!-- Stream Content -->
            <div class="space-y-3">
              <div>
                <h3 class={`text-xl font-bold font-mono ${stream.textColor} mb-1 group-hover:text-white transition`}>
                  {stream.name}
                </h3>
                <p class="text-xs font-mono text-gray-500 uppercase tracking-wider">
                  {stream.pillarLabel} Stream
                </p>
              </div>

              <p class="text-sm text-gray-400">
                {stream.tagline}
              </p>

              <p class="text-sm text-gray-300 leading-relaxed line-clamp-3">
                {stream.description}
              </p>

              <!-- Skills Tags -->
              <div class="flex flex-wrap gap-2 pt-2">
                {stream.skills.map((skill) => (
                  <span class="px-2 py-1 bg-gray-800/50 text-gray-400 text-xs rounded font-mono">
                    {skill}
                  </span>
                ))}
              </div>

              <!-- View Stream Link -->
              <div class="flex items-center gap-2 text-sm font-mono text-gray-400 group-hover:text-arc-electric transition pt-2">
                <span>View Stream</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

    </div>
  </section>

  <!-- Alternative Paths CTA -->
  <section class="py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="bg-[#131A33]/50 backdrop-blur-sm rounded-2xl shadow-2xl border border-gray-700/50 p-8 md:p-10 text-center">
        <h2 class="text-2xl md:text-3xl font-mono font-bold text-white mb-4">Want to understand the research first?</h2>
        <p class="text-base md:text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
          Learn about our four-scale approach before diving into specific streams.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/research"
            class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] group"
          >
            <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            <span>Read About Research</span>
          </a>
          <a
            href="/get-started"
            class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-arc-electric hover:bg-arc-electric/90 text-white rounded-lg font-mono font-bold transition-all duration-300 hover:scale-[1.05] shadow-lg shadow-arc-electric/50 group"
          >
            <span>Get Started</span>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Interactive stream matching now handled by global-interactions.js -->
</Layout>
