---
// ====================================================================
// ABOUT ARC^ PAGE (Combined with Manifesto)
// The complete story: origin, mission, philosophy, and foundation
// ====================================================================
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'about arc^ — ArcUp',
};

const nameMeaning = [
  {
    icon: 'tabler:bolt',
    title: 'The Arc of Physics',
    description: 'The plasma arc itself - super-heated, ionized gas, the fire at the heart of our work. Open science for all.',
    color: 'text-yellow-400'
  },
  {
    icon: 'tabler:flame',
    title: "To 'Arc Up'",
    description: 'To rise to the challenges of our time. To face collapse and change with courage and collaboration.',
    color: 'text-green-400'
  },
  {
    icon: '^',
    title: '^ The Exponential Caret',
    description: 'A symbol of acceleration and growth. Shared knowledge and technology shaping futures worth inheriting.',
    color: 'text-blue-400'
  },
];

const principles = [
  {
    icon: 'tabler:world',
    title: 'RE:EARTH',
    label: 'Worldview',
    summary: 'Earth as a living system, not a static resource.',
    description: 'We study the planet as a dynamic, emergent network and aim to enhance its ability to self-repair and evolve.',
    color: 'bg-green-400',
    textColor: 'text-green-400',
    hoverBorder: 'hover:border-green-400/60'
  },
  {
    icon: 'tabler:bolt',
    title: 'RE:TECH',
    label: 'Design Posture',
    summary: 'Non-extractive tools that serve living systems.',
    description: 'Technology must be open, safe, and future-conscious — built for collaboration, not capture.',
    color: 'bg-yellow-400',
    textColor: 'text-yellow-400',
    hoverBorder: 'hover:border-yellow-400/60'
  },
  {
    icon: 'tabler:scale',
    title: 'RE:ALIGN',
    label: 'Ethics',
    summary: 'Dignity, restoration, and safety guide every choice.',
    description: 'These are the principles that govern all ArcUp activity and define our responsibility to the commons.',
    color: 'bg-blue-400',
    textColor: 'text-blue-400',
    hoverBorder: 'hover:border-blue-400/60'
  },
];
---

<Layout metadata={metadata}>
  <div class="bg-primary-900 text-white min-h-screen">

    <!-- HERO SECTION -->
    <section class="relative py-8 md:py-12 bg-[radial-gradient(circle_at_top,#181f3d_0%,#080E21_90%)]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">

        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-gray-400">
            <li><a href="/" class="hover:text-arc-electric transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900 rounded">home</a></li>
            <li><span class="text-gray-600">/</span></li>
            <li class="text-white font-medium" aria-current="page">about</li>
          </ol>
        </nav>

        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-mono mb-4 tracking-tight text-white">
            about arc<span class="text-living-earth">^</span>
          </h1>
          <p class="text-lg md:text-xl text-gray-200 mb-3 font-semibold">
            What if the next breakthrough was built together - openly, safely, and for all life to benefit?
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 1: THE MEANING -->
    <section aria-labelledby="meaning-heading" class="py-6 md:py-10 bg-primary-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-8">
          <h2 id="meaning-heading" class="text-2xl md:text-3xl font-mono mb-3 text-arc-electric">what does arc^ mean</h2>
          <p class="text-gray-400 text-base">Pronounced: "arc-up" </p>
          <p class="text-s text-gray-500 mt-2 italic">A name that carries three connected meanings, simplified here for clarity:</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
          {nameMeaning.map((item) => (
            <div class="p-5 md:p-6 rounded-xl bg-gray-900/30 backdrop-blur-sm border border-gray-700/50 hover:border-arc-electric/60 hover:bg-gray-900/40 hover:scale-[1.02] transition-all duration-300 text-center group">
              {item.icon === '^' ? (
                <div class:list={["text-6xl mb-4", item.color]} role="img" aria-label={`${item.title} symbol`}>{item.icon}</div>
              ) : (
                <div class="mb-4 flex justify-center" role="img" aria-label={`${item.title} symbol`}>
                  <Icon name={item.icon} class:list={["w-16 h-16", item.color]} />
                </div>
              )}
              <h3 class="text-lg font-mono text-white mb-2 group-hover:text-arc-electric transition-colors">{item.title}</h3>
              <p class="text-sm text-gray-350 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- SECTION 2: THE PROBLEM -->
    <section class="py-6 md:py-10 bg-[#131A33] border-t border-b border-gray-800">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-2xl md:text-3xl font-mono mb-8 text-living-earth">why we need change</h2>

        <div class="space-y-6 mb-8">
          <p class="text-xl md:text-2xl font-bold text-white leading-tight">
            Technology isn't neutral.<br/>
            It amplifies the power behind it.
          </p>

          <p class="text-sm md:text-base text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Innovation has followed a repeating cycle:
          </p>

          <p class="text-lg md:text-xl text-gray-400 font-mono">
            war → patents → market capture → collapse
          </p>

          <p class="text-lg md:text-xl font-bold text-arc-electric">
            ARC^ exists to break that pattern.
          </p>
        </div>

        <div class="mt-10 p-6 md:p-8 rounded-xl bg-gray-900/30 backdrop-blur-sm border border-gray-700/50 text-center">
          <h3 class="text-lg md:text-xl font-mono text-living-earth mb-4">Earth is a living system, not a resource to extract.</h3>
          <p class="text-base md:text-lg text-arc-electric font-semibold leading-relaxed mb-3">
            Our job? Support that process.
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 3: THE MANIFESTO -->
    <section id="manifesto" aria-labelledby="manifesto-heading" class="py-6 md:py-10 bg-primary-900 scroll-mt-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-10">
          <h2 id="manifesto-heading" class="text-3xl md:text-4xl font-mono mb-4 text-arc-electric">our foundation for change</h2>
          <p class="text-base md:text-lg text-gray-400 max-w-3xl mx-auto">
            Pillars that guide how we design, research, and build.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
          {principles.map((pillar) => (
            <div class:list={[
              "p-5 md:p-6 rounded-xl bg-gray-900/30 backdrop-blur-sm border border-gray-700/50",
              "hover:bg-gray-900/40 hover:scale-[1.02] hover:shadow-xl transition-all duration-300",
              "text-center group cursor-pointer",
              pillar.hoverBorder
            ]}>
              <div class="mb-3 flex justify-center" role="img" aria-label={`${pillar.title} icon`}>
                <Icon name={pillar.icon} class:list={["w-12 h-12 md:w-14 md:h-14", pillar.textColor]} />
              </div>
              <h3 class="text-lg md:text-xl font-mono text-white mb-2 group-hover:text-arc-electric transition-colors">{pillar.title}</h3>
              <p class:list={["text-xs font-semibold mb-3", pillar.textColor]}>{pillar.label}</p>
              <p class="text-sm text-gray-200 font-semibold mb-3 leading-relaxed">{pillar.summary}</p>
              <div class="pt-3 border-t border-gray-700/50">
                <p class="text-xs md:text-sm text-gray-350 leading-relaxed">{pillar.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-8 text-center">
          <p class="text-sm text-gray-400">
            These pillars are part of the
            <a href="#manifesto" class="text-living-earth hover:text-arc-electric transition font-mono underline underline-offset-2 mx-1">
            re:practise</a> research framework.
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 4: THE ORIGIN STORY -->
    <section class="py-6 md:py-10 bg-[#131A33] border-t border-b border-gray-800">
      <div class="max-w-5xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-mono mb-3 text-living-earth">how arc^ began</h2>
          <p class="text-sm text-gray-400 mt-2">This origin story connects a single experiment toward a collective mission of open, regenerative science.</p>
        </div>

        <div class="p-6 md:p-10 rounded-xl bg-gray-900/30 backdrop-blur-sm border border-gray-700/50">
          <p class="text-xl md:text-2xl font-bold text-white text-center mb-8 italic leading-tight">
            "What if everyone made the same choices as me?<br/>
            What world would that lead to?"
          </p>

          <div class="space-y-4 text-sm md:text-base text-gray-300 leading-relaxed max-w-3xl mx-auto">
            <p>
              a question: could plasma influence seed germination?
            </p>
            <p>
              <strong class="text-living-earth text-base md:text-lg">It did.</strong>
            </p>
            <p class="text-white">Plasma altered biological processes.</p>
            <p class="text-white text-sm md:text-base italic pt-3">
              From that moment, a thought emerged: It would take too long to build this alone.
            </p>
            <p class="text-white text-sm md:text-base pt-0.5">
              So, what if the work was shared?
            </p>
            <p class="text-lg md:text-xl font-bold text-arc-electric text-center pt-6">
              <span class="text-living-earth">ARC^</span> was born from this thought process
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- FINAL CTA -->
    <section class="py-6 md:py-10 bg-[radial-gradient(circle_at_top,#181f3d_0%,#080E21_90%)]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <CallToAction
          title="<span class='text-arc-electric'>Ready to explore?</span>"
          subtitle="Understand our research approach, then choose your path."
          actions={[
            {
              variant: 'primary',
              text: 'View Research',
              href: '/research',
              class: 'bg-arc-electric hover:bg-arc-electric/90 px-8 py-4 rounded-lg font-bold text-white transition-all focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900',
            },
            {
              variant: 'secondary',
              text: 'Explore Projects',
              href: '/projects',
              class: 'bg-arc-electric hover:bg-arc-electric/90 px-8 py-4 rounded-lg font-bold text-white transition-all focus-visible:ring-2 focus-visible:ring-arc-electric focus-visible:ring-offset-2 focus-visible:ring-offset-primary-900',
            },
          ]}
          bg="bg-[#131A33]/50 backdrop-blur-sm rounded-2xl shadow-2xl border border-gray-700/50"
        />
      </div>
    </section>

  </div>
</Layout>
