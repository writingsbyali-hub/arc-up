---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: '500 - Server Error â€” arc^',
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen bg-primary-900 text-white flex items-center justify-center px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">

      <!-- Icon/Visual -->
      <div class="mb-8 flex justify-center">
        <Icon name="tabler:server-bolt" class="w-32 h-32 text-living-earth opacity-50" />
      </div>

      <!-- Error Code -->
      <div class="mb-6">
        <h1 class="text-8xl md:text-9xl font-mono font-bold text-living-earth mb-4">
          500
        </h1>
        <p class="text-2xl md:text-3xl font-mono text-white mb-4">
          Server Error
        </p>
      </div>

      <!-- Message -->
      <div class="mb-8 space-y-4">
        <p class="text-xl text-gray-300 leading-relaxed">
          Something went wrong in the system.
        </p>
        <p class="text-base text-gray-400 max-w-2xl mx-auto">
          The server encountered an unexpected condition. Like a plasma discharge finding an unintended path, our systems hit an anomaly. We're working to restore equilibrium.
        </p>
      </div>

      <!-- Helpful Navigation -->
      <div class="bg-gray-900/50 border border-gray-700 rounded-xl p-5 md:p-6 mb-8">
        <h2 class="text-xl font-mono text-living-earth mb-6">Try these safe paths</h2>
        <div class="grid md:grid-cols-2 gap-4 text-left">
          <a href="/" class="flex items-start gap-3 p-4 rounded-lg bg-gray-800/50 hover:bg-gray-800 border border-gray-700/50 hover:border-living-earth/50 transition-all duration-300 group">
            <Icon name="tabler:home" class="w-6 h-6 text-living-earth flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-mono text-white group-hover:text-living-earth transition-colors">Homepage</h3>
              <p class="text-sm text-gray-400">Return to stable ground</p>
            </div>
          </a>

          <a href="/about" class="flex items-start gap-3 p-4 rounded-lg bg-gray-800/50 hover:bg-gray-800 border border-gray-700/50 hover:border-living-earth/50 transition-all duration-300 group">
            <Icon name="tabler:info-circle" class="w-6 h-6 text-living-earth flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-mono text-white group-hover:text-living-earth transition-colors">About arc^</h3>
              <p class="text-sm text-gray-400">Learn what we're building</p>
            </div>
          </a>

          <a href="/projects" class="flex items-start gap-3 p-4 rounded-lg bg-gray-800/50 hover:bg-gray-800 border border-gray-700/50 hover:border-living-earth/50 transition-all duration-300 group">
            <Icon name="tabler:map" class="w-6 h-6 text-arc-electric flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-mono text-white group-hover:text-arc-electric transition-colors">Pathways</h3>
              <p class="text-sm text-gray-400">Explore our research streams</p>
            </div>
          </a>

          <a href="/research" class="flex items-start gap-3 p-4 rounded-lg bg-gray-800/50 hover:bg-gray-800 border border-gray-700/50 hover:border-living-earth/50 transition-all duration-300 group">
            <Icon name="tabler:microscope" class="w-6 h-6 text-arc-electric flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-mono text-white group-hover:text-arc-electric transition-colors">Research</h3>
              <p class="text-sm text-gray-400">Our four-scale approach</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Alternative Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="/"
          class="bg-living-earth hover:bg-living-earth/80 px-8 py-3 rounded-full font-bold text-white shadow-lg shadow-living-earth/40 transition-all hover:scale-105"
        >
          Back to Homepage
        </a>
        <a
          href="https://discord.com/invite/DA8BPA3VsN"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 bg-gray-800 hover:bg-gray-700 px-8 py-3 rounded-full font-bold text-white border border-gray-600 transition-all hover:scale-105"
        >
          <Icon name="tabler:brand-discord" class="w-5 h-5" />
          Report on Discord
        </a>
      </div>

      <!-- Technical Details -->
      <div class="mt-12 pt-8 border-t border-gray-800">
        <p class="text-xs text-gray-600 font-mono">
          Error code: PLASMA_SYSTEM_FAULT | State: Critical | Recommendation: Retry or contact support
        </p>
      </div>

    </div>
  </div>
</Layout>
